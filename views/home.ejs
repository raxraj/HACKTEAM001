<!DOCTYPE HTML>
<html lang="en">
<head>
	<title>News Mate</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8">
	
	<!-- Font -->
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,700" rel="stylesheet">
	
	<!-- Stylesheets -->
	
	<link href="../home/plugin-frameworks/bootstrap.min.css" rel="stylesheet">
	<link href="../home/plugin-frameworks/swiper.css" rel="stylesheet">
	
	<link href="../home/fonts/ionicons.css" rel="stylesheet">
	
		
	<link href="../home/common/styles.css" rel="stylesheet">
	
	
</head>
<body>
	
	<header>
		<a class="logo" href="#"><img src="../home/../home/images/logo-white.png" alt="Logo"></a>
			
		<a class="menu-nav-icon" data-menu="#main-menu" href="#"><i class="ion-navicon"></i></a>
		
		<ul class="main-menu" id="main-menu">
			<li><a href="/">Home</a></li>
					<li><a href="/business">Business</a></li>
					<li><a href="/entertainment">Entertainment</a></li>
					<li><a href="/health">Health</a></li>
					<li><a href="/science">Science</a></li>
					<li><a href="/sports">Sports</a></li>
					<li><a href="/technology">Technology</a></li>
				
			<li><a href="/localNews">Local News</a></li>
			<li><a href="/international">International</a></li>
		</ul>
		
		<div class="clearfix"></div>
	</header>
	
	<div class="slider-main h-800x h-sm-auto pos-relative pt-95 pb-25">
		<div class="img-bg bg-1 bg-layer-4"></div>
		<div class="container-fluid h-100 mt-xs-50">
		
			<div class="row h-100">
				<div class="col-md-1"></div>
				<div class="col-sm-12 col-md-5 h-100 h-sm-50">
					<div class="dplay-tbl">
						<div class="dplay-tbl-cell color-white mtb-30">
							<div class="mx-w-400x">
								<h5><b>
									by
									<%= topHeadlines.articles[0].source.name %>
								</b></h5>
                                <h2 class="mt-20 mb-30"><b>
									<%= (topHeadlines.articles[0].title).slice(0,45) %> ... 
								</b></h2>
                                <h4 class="mt-20 mb-30">
									<%= topHeadlines.articles[0].description %> 
								</h4>
								<h6><a class="plr-20 btn-brdr-grey color-white" href="<%=
										topHeadlines.articles[0].url
									%>"><b>Continue Reading</b></a></h6>
							</div><!-- mx-w-200x -->
						</div><!-- dplay-tbl-cell -->
					</div><!-- dplay-tbl -->
				</div><!-- col-sm-6 -->
				
				<div class="col-sm-12 col-md-6 h-sm-50 oflow-hidden swiper-area pos-relative">			
			</div><!-- row -->
		</div><!-- container -->
	</div><!-- slider-main -->
	
	
	<section class="bg-1-white ptb-0">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-1"></div>
				<div class="col-md-12 col-lg-8 ptb-50 pr-30 pr-md-15">
					<h4 class="mb-30 mt-20 clearfix"><b>Whats trending</b></h4>
					
					<div class="row">
						
						<!-- START OF SECOND PARA -->
						<div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 mb-30">
							<div class="card h-100 h-xs-500x">
								<div class="sided-half sided-xs-half h-100 bg-white">
								
									<!-- SETTING IMAGE WITH bg-2 -->
									<div class="s-left w-50 w-xs-100 h-100 h-xs-50 pos-relative">
										<div class="bg-2 abs-tblr"></div></div>
									
									<div class="s-right w-50 w-xs-100 h-xs-50">
										<div class="plr-25 ptb-25 h-100">
											<div class="dplay-tbl">
												<div class="dplay-tbl-cell">
												
													<h5 class="color-ash"><b>
														by
														<%= trending.articles[0].source.name %> 
													</b></h5>
													<h2 class="mtb-10"><a href="<%=
															trending.articles[0].url
														%>">
														<b>
															<%= (trending.articles[0].title).slice(0,50) %> 
														</b></a></h2>
													<ul class="list-li-mr-10 color-lt-black">
													</ul>
													
												</div><!-- dplay-tbl-cell -->
											</div><!-- dplay-tbl -->
										</div><!-- plr-25 ptb-25 -->
									</div><!-- s-right -->
								</div><!-- sided-half -->
							</div><!-- card -->
						</div><!-- col-lg-8 col-md-12 -->
						
						<div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 mb-30">
							<div class="card h-100 h-xs-350x">
								<div class="bg-white h-100">
								
									<!-- SETTING IMAGE WITH bg-3 -->
									<div class="h-50 bg-3 dplay-lg-none dplay-xs-block"></div>
									
									<div class="plr-25 ptb-15 h-50">
										<div class="dplay-tbl">
											<div class="dplay-tbl-cell">
											
												<h5 class="color-ash"><b>
													by
													<%= trending.articles[1].source.name %> 
												</b></h5>
												<h4 class="mtb-10"><a href="<%=
														trending.articles[1].url
													%>">
													<b>
														<%= (trending.articles[1].title).slice(0,50) %> 
													</b></a></h4>
												<ul class="list-li-mr-10 color-lt-black">
												</ul>
												
											</div><!-- dplay-tbl-cell -->
										</div><!-- dplay-tbl -->
									</div><!-- plr-25 ptb-15 -->
								</div><!-- hot-news -->
							</div><!-- card -->
						</div><!-- col-lg-4 col-md-6 -->
						
						<!-- END OF SECOND PARA -->
				

					</div><!-- row -->
					
					<h4 class="mb-30 mt-20 clearfix"><b>Trending</b></h4>
					
					<div class="row">
						
						<div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 mb-30">
							<div class="card h-100">
								<% for(let i=0 ; i<5 ; i++) {%> 
									<div class="h-50 pb-15">
										<div class="plr-25 h-100 ptb-15 bg-white">
											<div class="dplay-tbl">
												<div class="dplay-tbl-cell">
												
													<h5 class="color-ash"><b>
														<%= trending.articles[i].source.name %> 
													</b></h5>
													<h4 class="mtb-10"><a href="<%=
															trending.articles[i].url
														%>"><b>
														<%= (trending.articles[i].title).slice(0,50) %> 
													</b></a></h4>									
												</div><!-- dplay-tbl-cell -->
											</div><!-- dplay-tbl -->
										</div><!-- plr-25 ptb-15 -->
									</div><!--h-50 bg-white -->
								<%}%> 
								
							</div><!-- card -->
						</div><!-- col-lg-4 col-md-6 -->
						<div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 mb-30">
							<div class="card h-100">
								<% for(let i=5 ; i<10 ; i++) {%> 
									<div class="h-50 pb-15">
										<div class="plr-25 h-100 ptb-15 bg-white">
											<div class="dplay-tbl">
												<div class="dplay-tbl-cell">
												
													<h5 class="color-ash"><b>
														<%= trending.articles[i].source.name %> 
													</b></h5>
													<h4 class="mtb-10"><a href="<%=
															trending.articles[i].url
														%>"><b>
														<%= (trending.articles[i].title).slice(0,50) %> 
													</b></a></h4>									
												</div><!-- dplay-tbl-cell -->
											</div><!-- dplay-tbl -->
										</div><!-- plr-25 ptb-15 -->
									</div><!--h-50 bg-white -->
								<%}%> 
								
							</div><!-- card -->
						</div><!-- col-lg-4 col-md-6 -->
						<div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 mb-30">
							<div class="card h-100">
								<% for(let i=10 ; i<15 ; i++) {%> 
									<div class="h-50 pb-15">
										<div class="plr-25 h-100 ptb-15 bg-white">
											<div class="dplay-tbl">
												<div class="dplay-tbl-cell">
												
													<h5 class="color-ash"><b>
														<%= trending.articles[i].source.name %> 
													</b></h5>
													<h4 class="mtb-10"><a href="<%=
															trending.articles[i].url
														%>"><b>
														<%= (trending.articles[i].title).slice(0,50) %> 
													</b></a></h4>									
												</div><!-- dplay-tbl-cell -->
											</div><!-- dplay-tbl -->
										</div><!-- plr-25 ptb-15 -->
									</div><!--h-50 bg-white -->
								<%}%> 
								
							</div><!-- card -->
						</div><!-- col-lg-4 col-md-6 -->
					</div><!-- row -->
					
				</div><!-- col-sm-9 -->
				
				<div class="col-md-12 col-lg-3 bg-2-white ptb-50 pl-30 pl-md-15">
					<div class="row">
						<div class="col-md-12 col-lg-8">
							<div class="mx-w-md-400x mlr-md-auto">
							
								<div class="mb-50">
									<h5 class="mb-30"><b>TOP STORIES</b></h5>
									<% for(let i=0 ; i<10 ; i++) {%> 
										<div class="sided-80x mb-20">
											<div class="s-left">
												<img src="<%=
													topStories.articles[i].urlToImage
												%>" alt="">
											</div><!-- s-left -->
											<div class="s-right">
												<h5 class="pt-5"><a href="<%=
														topStories.articles[i].url
													%>"><b>
													<%= (topStories.articles[i].title).slice(0,30)  %> ...
												</b></a></h5>
											</div><!-- s-left -->
										</div><!-- sided-80x -->
									<%}%>
								</div><!-- mb-50 -->
							</div><!-- mx-w-400 -->
						</div><!-- col-sm-9 -->
					</div><!-- row -->
				</div><!-- col-sm-3 -->
			</div><!-- row -->
		</div><!-- container -->
	</section>
	
	
	
	
	<!-- SCIPTS -->
	
	<script src="../home/plugin-frameworks/jquery-3.2.1.min.js"></script>
	
	<script src="../home/plugin-frameworks/bootstrap.min.js"></script>
	
	<script src="../home/plugin-frameworks/swiper.js"></script>
	
	
	<script src="../home/common/scripts.js"></script>
	
</body>
</html>